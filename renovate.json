{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "baseBranches": ["dev"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "all non-breaking updates",
      "groupSlug": "non-breaking"
    },
    {
      "matchCurrentVersion": "< 1.0.0",
      "separateMinorPatch": true
    }
  ]
}
